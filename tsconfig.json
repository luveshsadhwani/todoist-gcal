{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true, // flag any types as an error
    "preserveConstEnums": true,
    "strictNullChecks": true
  },
  "allowJs": true, // Allow JavaScript files to be compiled
  "checkJs": true, // Type check JavaScript files and report errors
  "include": ["src"],
  "target": "es6"
}
